{
  "manifest_version": 3,
  "name": "KickBack Alpha",
  "version": "0.0.1",
  "description": "Auto resume a kick.com vod from where you left off",
  "permissions": ["tabs", "webNavigation"],
  "background": {
    "service_worker": "src/background.ts"
  },
  "content_scripts": [
    {
      "js": ["src/videoObserver.ts", "src/progressBar.ts"],
      "matches": ["https://*.kick.com/*"]
    }
  ]
}
